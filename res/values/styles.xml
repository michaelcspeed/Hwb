<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="SplashScreen">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="seperator_view_style">
        <item name="android:background">@color/yellowbuttons</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="header_texr_style" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/yellowbuttons</item>
    </style>
    <style name="header_texr_style_10in" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">@color/yellowbuttons</item>
    </style>
    <style name="big_time_style" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/yellowbuttons</item>
    </style>
    <style name="fwd_button_style" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/fwd_button</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
</resources>